{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-active-preset",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${command:cmake.buildDirectory}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "presentation": {
                "reveal": "silent",
                "clear": true
            }
        },
        {
            "label": "clean-build-directory",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${command:cmake.buildDirectory}",
                "--target",
                "clean"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "clear": true
            }
        }
    ]
}